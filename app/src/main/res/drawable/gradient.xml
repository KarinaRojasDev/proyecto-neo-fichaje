<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa 1: Borde negro -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/borde_neon_suave" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Capa 2: Gradiente interior con margen (para que se vea el borde) -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <gradient
                android:startColor="@color/gradiente_azul_inicio"
                android:centerColor="@color/gradiente_verde_centro"
                android:endColor="@color/gradiente_claro_fin"
                android:angle="20"
                />
        </shape>
    </item>
</layer-list>