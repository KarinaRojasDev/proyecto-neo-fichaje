<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuPerfilEmpresario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".perfilEmpresario"
    tools:openDrawer="start">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/include_Perfil"
                layout="@layout/toolbar_comun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/datosEmpresa"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/tv_titleEmpresa"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    app:drawableStartCompat="@drawable/ic_business"
                    android:layout_marginEnd="8dp"
                    android:drawablePadding="4dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:text="@string/nombreEmpresa"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvNombreEmpresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutNif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/titleNif"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:text="@string/nifEmpresa"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic_nit" />

                <TextView
                    android:id="@+id/tvNif"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text=""
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/tv_emailEmpresa"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    app:drawableStartCompat="@drawable/ic_email"
                    android:layout_marginEnd="8dp"
                    android:drawablePadding="4dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:text="@string/emailEmpresa"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/tv_fonoEmpresa"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    app:drawableStartCompat="@drawable/ic_phone"
                    android:layout_marginEnd="8dp"
                    android:drawablePadding="4dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:text="@string/fonoEmpresa"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvFono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/tv_dirEmpresa"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    app:drawableStartCompat="@drawable/ic_location"
                    android:layout_marginEnd="8dp"
                    android:drawablePadding="4dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:text="@string/dirreccionEmpresa"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvDir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/tv_wwwEmpresa"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    app:drawableStartCompat="@drawable/ic_web"
                    android:layout_marginEnd="8dp"
                    android:drawablePadding="4dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:text="@string/webEmpresa"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvWww"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tituloEmpresario"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/tv_nombreAdmin"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    app:drawableStartCompat="@drawable/ic_person"
                    android:layout_marginEnd="8dp"
                    android:drawablePadding="4dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:text="@string/nombreAdministrador"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/tv_apellidosAdmin"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    app:drawableStartCompat="@drawable/ic_person"
                    android:layout_marginEnd="8dp"
                    android:drawablePadding="4dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:text="@string/apellidoAdministrador"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvApellidos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/tv_emailAdmin"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    app:drawableStartCompat="@drawable/ic_email"
                    android:layout_marginEnd="8dp"
                    android:drawablePadding="4dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:text="@string/emailAdministrador"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvEmailAd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/tv_puestoAdmin"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    app:drawableStartCompat="@drawable/ic_business"
                    android:layout_marginEnd="8dp"
                    android:drawablePadding="4dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:text="@string/cargo"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvPuesto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.widget.Button
                    android:id="@+id/btn_editarPerfilEmpresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/gradient"
                    android:textColor="@android:color/black"
                    android:padding="10dp"
                    android:text="@string/btnEditarPerfil"
                    android:textSize="16sp"/>

                <android.widget.Button
                    android:id="@+id/btnCambioPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/gradient"
                    android:textColor="@android:color/black"
                    android:padding="10dp"
                    android:text="@string/btnCambiarPass"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Menú lateral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_gestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        app:menu="@menu/activity_inicio_empresario_menu" />
</androidx.drawerlayout.widget.DrawerLayout>