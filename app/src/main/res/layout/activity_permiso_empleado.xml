<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuPermiso"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".permisoEmpleado"
    tools:openDrawer="start">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include
                android:id="@+id/includePermisos"
                layout="@layout/toolbar_comun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/notification_empleados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/permiso"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tipoPermiso"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/spinnerTipo"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/motivo"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/spinnerMotivo"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/opcion"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/id_comentarioVaca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rectangule"
                    android:hint="@string/otros"
                    android:inputType="textMultiLine"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:textColorHint="@color/teal_900"
                    android:textSize="16sp"
                    android:maxLines="5"
                    android:minLines="3"
                    android:padding="15dp" />

                <LinearLayout
                    android:id="@+id/layoutFechaInicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/tvFechaInicio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/black"
                        android:text="@string/fechaInicio"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_date" />

                    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                        android:id="@+id/calendarioFechaInicio"
                        android:layout_width="match_parent"
                        android:layout_height="265dp"
                        android:background="@color/rosaSuave"
                        app:mcv_dateTextAppearance="@style/CalendarDateTextStyle"
                        app:mcv_headerTextAppearance="@style/CalendarHeaderStyle"
                        app:mcv_selectionColor="@color/rosa"
                        app:mcv_showOtherDates="all"
                        android:visibility="gone"
                        app:mcv_weekDayTextAppearance="@style/CalendarWeekStyle" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layoutFechaFin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/tvFechaFin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/black"
                        android:text="@string/fechaFin"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_date" />

                    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                        android:id="@+id/calendarioFechaFin"
                        android:layout_width="match_parent"
                        android:layout_height="265dp"
                        android:background="@color/rosaSuave"
                        app:mcv_dateTextAppearance="@style/CalendarDateTextStyle"
                        app:mcv_headerTextAppearance="@style/CalendarHeaderStyle"
                        app:mcv_selectionColor="@color/rosa"
                        app:mcv_showOtherDates="all"
                        android:visibility="gone"
                        app:mcv_weekDayTextAppearance="@style/CalendarWeekStyle" />
                </LinearLayout>
                <android.widget.Button
                    android:id="@+id/btnTomarFoto"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/adjuntarPhoto"
                    android:drawableStart="@drawable/ic_photo"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:background="@drawable/gradient"/>

                <ImageView
                    android:id="@+id/imgPreview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:background="@drawable/border" />


                <android.widget.Button
                    android:id="@+id/btnEnviarSolicitud"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="@drawable/gradient"
                    android:padding="10dp"
                    android:text="@string/enviar"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        app:menu="@menu/activity_inicio_empleado_menu" />
</androidx.drawerlayout.widget.DrawerLayout>